import { trainData } from "./TrainTimetableData";
import { useDispatch, useSelector } from "react-redux";
import { useNavigate } from "react-router-dom";

import "../styles/trainTimetableDetails.scss";
import { useEffect } from "react";
import { getTrainTimetableData } from "../features/trainTimetable/trainTimetableSlice";

const TrainTimetableDetails = () => {
  const dispatch = useDispatch();
  const navigate = useNavigate();
  const { trainTimetableData, isLoading, isError, message, isSuccess } =
    useSelector((state) => state.trainTimetable);
  console.log({ trainTimetableData });

  useEffect(() => {
    if (isError) console.error(message);

    if (!isSuccess) {
      navigate("/train-timetable");
    }
    // return () => {
    //   dispatch(reset());
    // };
  }, [isError, message, dispatch, navigate]); //isError, message, dispatch, navigate
  // console.log({ trainTimetableData });
  if (isLoading) return <h1>Loading....</h1>;
  return (
    <section className="trainTimetableDetails">
      <table>
        <thead>
          <tr>
            <th>SNo</th>
            <th>Station</th>
            <th>Arrival</th>
            <th>Distance</th>
          </tr>
          <tr>
            <th></th>
            <th></th>
            <th>Departure</th>
          </tr>
        </thead>
        <tbody>
          {trainTimetableData.map(
            ({
              seq,
              _id,
              stationName,
              stationCode,
              arrivalTime,
              departureTime,
              distance,
            }) => (
              <div key={_id}>
                <tr>
                  <td>{seq}</td>
                  <td>{stationName}</td>
                  <td>{arrivalTime.substring(0, 5)}</td>
                  <td>{distance} km</td>
                </tr>
                <tr>
                  <td></td>
                  <td>({stationCode})</td>
                  <td>{departureTime.substring(0, 5)}</td>
                </tr>
              </div>
            )
          )}
        </tbody>
      </table>
    </section>
  );
};

export default TrainTimetableDetails;
